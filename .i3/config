bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        # bindsym j resize shrink width 5 px or 10 ppt
        # bindsym k resize grow height 5 px or 10 ppt
        # bindsym l resize shrink height 5 px or 10 ppt
        # bindsym semicolon resize grow width 5 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px
        bindsym Down resize grow height 5 px
        bindsym Up resize shrink height 5 px
        bindsym Right resize grow width 5 px

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# send key status to i3blocks
bindsym --release Caps_Lock   exec --no-startup-id $updatekeystat
bindsym --release Num_Lock    exec --no-startup-id $updatekeystat

# brightness
bindsym XF86MonBrightnessDown exec --no-startup-id "xbacklight -time 200 -dec 5; $updatebr"
bindsym XF86MonBrightnessUp   exec --no-startup-id "xbacklight -time 200 -inc 5; $updatebr"

# sound
bindsym XF86AudioRaiseVolume  exec --no-startup-id "amixer -q set Master 5%+ unmute ; $updatevol"
bindsym XF86AudioLowerVolume  exec --no-startup-id "amixer -q set Master 5%- ; $updatevol"
bindsym XF86AudioMute         exec --no-startup-id "amixer -q set Master toggle ; $updatevol"

# Lock
bindsym $win+l exec --no-startup-id $i3block
exec --no-startup-id xss-lock -- $i3block
exec --no-startup-id xautolock -time 10 -locker '$i3block'

set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $i3block, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $i3block && systemctl suspend, mode "default"
    # bindsym h exec --no-startup-id $i3lock && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

