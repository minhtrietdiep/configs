-e 'mv $f "/home/mt/Dropbox/Screenshots - Laptop/Linux"'
bindsym $win+Print exec --no-startup-id scrot -u '%Y-%m-%d-%H-%M-%S.png' \
-e 'mv $f "/home/mt/Dropbox/Screenshots - Laptop/Linux"'

